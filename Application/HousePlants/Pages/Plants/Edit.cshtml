@model HousePlants.Pages.Plants.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Plant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Plant.CommonName" class="control-label"></label>
                <input asp-for="Plant.CommonName" class="form-control" />
                <span asp-validation-for="Plant.CommonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.LatinName" class="control-label"></label>
                <input asp-for="Plant.LatinName" class="form-control" />
                <span asp-validation-for="Plant.LatinName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.AquiredDate" class="control-label"></label>
                <input asp-for="Plant.AquiredDate" class="form-control" />
                <span asp-validation-for="Plant.AquiredDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Plant.Id" />
            <div class="form-group">
                <label asp-for="Plant.Title" class="control-label"></label>
                <input asp-for="Plant.Title" class="form-control" />
                <span asp-validation-for="Plant.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Description" class="control-label"></label>
                <textarea asp-for="Plant.Description" class="form-control"></textarea>
                <span asp-validation-for="Plant.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" asp-for="UploadedFile" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
